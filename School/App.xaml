<Application x:Class="School.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:School"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate TargetType="Button" x:Key="btn">
            <Border 
                CornerRadius="12"
                Background="White"
                BorderBrush="#04a0ff"
                BorderThickness="3"
                Width="120px"
                Height="30px"
                Margin="0,5,0,5"
                HorizontalAlignment="Left">
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">Редактировать</ContentControl>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
